{
  "manifest_version": 3,
  "name": "Mensajes Aleatorios",
  "version": "1.0",
  "description": "Muestra mensajes motivacionales aleatorios desde JSON",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["storage"],
  "web_accessible_resources": [{
    "resources": ["mensajes.json"],
    "matches": []
  }],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}